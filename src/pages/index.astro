				--opening-inner-text-duration: 1.8s;
				--opening-inner-duration: calc(var(--opening-inner-text-duration) * 1.5);
				--body-close-duration: calc(var(--opening-inner-duration) + 1s);
			}

			html, body {
				animation: closeAnimBody var(--body-close-duration) forwards;
			}

			@keyframes closeAnimBody {
				0% {
					overflow: hidden;
				}
				99% {
					overflow: hidden;
				}
				100% {
					overflow: auto;
				}
			}

			.opening {
				width: 100%;
				height: 100%;
				background-color: var(--opening-bg-color);
				display: flex;
				justify-content: center;
				align-items: center;
				animation: closeAnimOpening var(--body-close-duration) forwards;
			}

			@keyframes closeAnimOpening {
				0% {
					display: flex;
				}
				90% {
					opacity: 1;
				}
				99% {
					display: flex;
				}
				100% {
					display: none;
					opacity: 0;
				}
			}

			.opening-border, .opening-inner {
				width: calc(100% - var(--margin-size) * 2);
				max-width: 1200px;
				height: calc(100% - var(--margin-size) * 2);
				max-height: 1200px;
				margin: var(--margin-size);
			}

			.opening-border {
				position: relative;
			}

			.opening-inner {
				position: absolute;
				animation: openingInnerBg var(--opening-inner-duration) forwards;
			}

			@keyframes openingInnerBg {
				0% {
					background-color: var(--opening-bg-color);
				}
				50% {
					background-color: var(--opening-bg-color);
					width: 0;
					height: 0;
				}
				100% {
					background-color: var(--bg-color);
					width: 100%;
					height: 100%;
				}
			}

			.opening-inner-text, .opening-inner-text-name-wrapper {
				color: var(--text-color);
				font-size: 2.5rem;
				font-family: "Space Mono", monospace;
				font-weight: 400;
				font-style: normal;
				white-space: nowrap;
				animation: openingInnerText var(--opening-inner-text-duration) forwards;
			}
			@keyframes openingInnerText {
				0% {
					opacity: 0;
				}
				85% {
					opacity: 0;
				}
				100% {
					opacity: 1;
				}
			}

			.opening-inner-text.hello {
				position: absolute;
				top: calc(var(--margin-size) * 6);
				left: calc(var(--margin-size) * 6);
			}

			.opening-inner-text.im {
				position: absolute;
				bottom: calc(var(--margin-size) * 6);
				right: calc(var(--margin-size) * 6);
			}

			.opening-inner-text-name-wrapper {
				font-family: "M PLUS 1p", sans-serif;
				display: grid;
    		grid-template-columns: 64px 1fr;
				gap: 2rem;
				justify-items: center;
				align-items: center;
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
			}

			.opening-inner-text-name-wrapper img {
				width: 64px;
				height: 64px;
				border-radius: 50%;
			}

			.tsumugu {
